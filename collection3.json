{
	"info": {
		"_postman_id": "3c9acc7d-8c0c-4871-8687-d3a72415962c",
		"name": "API3",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "21686506"
	},
	"item": [
		{
			"name": "Log In",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const responseData = pm.response.json();",
							"",
							"// 1. Lưu access_token để xác thực",
							"if (responseData.access_token) {",
							"    const accessToken = responseData.access_token;",
							"    pm.environment.set(\"auth_token\", accessToken);",
							"    console.log(\"Đã lưu token xác thực.\");",
							"",
							"    try {",
							"        // 2. Tách token thành 3 phần (Header, Payload, Signature)",
							"        const tokenParts = accessToken.split('.');",
							"        ",
							"        // 3. Lấy phần payload (phần ở giữa) và giải mã Base64",
							"        // Hàm atob() có sẵn trong Postman để giải mã Base64",
							"        const payload = JSON.parse(atob(tokenParts[1]));",
							"",
							"        // 4. Trích xuất giá trị 'sub' (chính là user ID) từ payload",
							"        const userId = payload.sub;",
							"",
							"        // 5. Lưu user_id vào biến môi trường",
							"        if (userId) {",
							"            pm.environment.set(\"user_id\", userId);",
							"            console.log(`Đã lưu user_id: ${userId}`);",
							"        } else {",
							"            console.error(\"Không tìm thấy 'sub' (user_id) trong payload của token.\");",
							"        }",
							"    } catch (e) {",
							"        console.error(\"Lỗi khi giải mã token:\", e);",
							"    }",
							"} else {",
							"    console.error(\"Không tìm thấy access_token trong response.\");",
							"}",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "http://localhost:8091/users/login",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8091",
					"path": [
						"users",
						"login"
					]
				}
			},
			"response": []
		},
		{
