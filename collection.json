	"item": [
		{
			"name": "Log In",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const responseData = pm.response.json();",
							"",
							"// Kiểm tra xem response có chứa access_token không",
							"if (responseData.access_token) {",
							"    // Lưu token vào biến môi trường với tên là 'auth_token'",
							"    pm.environment.set(\"auth_token\", responseData.access_token);",
							"    console.log(\"Đã lưu token xác thực thành công!\");",
							"} else {",
							"    console.error(\"Đăng nhập thất bại hoặc không tìm thấy token trong response.\");",
							"}",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"email\": \"customer@practicesoftwaretesting.com\",\n  \"password\": \"welcome01\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "http://localhost:8091/users/login",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8091",
					"path": [
						"users",
						"login"
					]
				}
			},
			"response": []
		},
		{
			"name": "Get Products",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// 1. Phân tích dữ liệu JSON trả về từ API",
							"const responseData = pm.response.json();",
							"",
							"// 2. Kiểm tra xem có dữ liệu sản phẩm hay không",
							"if (responseData && responseData.data && responseData.data.length > 0) {",
							"    const products = responseData.data;",
							"",
							"    // 3. Chọn một sản phẩm ngẫu nhiên từ danh sách",
							"    const randomProduct = products[Math.floor(Math.random() * products.length)];",
							"",
							"    // 4. Lưu ID và giá của sản phẩm ngẫu nhiên vào biến môi trường",
							"    pm.environment.set(\"product_id\", randomProduct.id);",
							"    pm.environment.set(\"unit_price\", randomProduct.price);",
							"",
							"    console.log(`Đã lưu sản phẩm ngẫu nhiên: ID=${randomProduct.id}, Giá=${randomProduct.price}`);",
							"",
							"} else {",
							"    console.error(\"Không tìm thấy sản phẩm nào trong kết quả trả về.\");",
							"}",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "http://localhost:8091/products",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8091",
					"path": [
						"products"
					]
				}
			},
			"response": []
		},
		{
			"name": "Create Invoices",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"// Lấy số lượng từ file CSV (dữ liệu của iteration hiện tại)",
							"const quantity = pm.iterationData.get(\"quantity\");",
							"",
							"// Lấy đơn giá từ biến môi trường (đã được set bởi request GET)",
							"const unitPrice = pm.environment.get(\"unit_price\");",
							"",
							"// Tính tổng tiền (nhớ chuyển đổi sang số để tính toán)",
							"const total = parseFloat(quantity) * parseFloat(unitPrice);",
							"",
							"// Lưu tổng tiền vào một biến môi trường mới để sử dụng trong body",
							"pm.environment.set(\"calculated_total\", total.toFixed(2));"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": [
						{
							"key": "token",
							"value": "{{auth_token}}",
							"type": "string"
						}
					]
				},
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"user_id\": {{user_id}},\n  \"billing_address\": \"{{billing_address}}\",\n  \"billing_city\": \"{{billing_city}}\",\n  \"billing_country\": \"{{billing_country}}\",\n  \"billing_state\": \"{{billing_state}}\",\n  \"billing_postcode\": \"{{billing_postcode}}\",\n  \"total\": {{calculated_total}},\n  \"payment_method\": \"Cash on Delivery\",\n  \"payment_account_name\": \"John Doe\",\n  \"payment_account_number\": \"0987654345\",\n  \"invoice_items\": [\n    {\n      \"product_id\": {{product_id}},\n      \"quantity\": {{quantity}},\n      \"unit_price\": {{unit_price}}\n    }\n  ]\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "http://localhost:8091/invoices",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8091",
					"path": [
						"invoices"
					]
				}
			},
			"response": []
		}
	]
}